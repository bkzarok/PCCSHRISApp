            <div class="form-group">
                <label asp-for="Counuty" class="control-label"></label>
                <input asp-for="Counuty" class="form-control" />
                <span asp-validation-for="Counuty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payam" class="control-label"></label>
                <input asp-for="Payam" class="form-control" />
                <span asp-validation-for="Payam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Boma" class="control-label"></label>
                <input asp-for="Boma" class="form-control" />
                <span asp-validation-for="Boma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MilitaryNo" class="control-label"></label>
                <input asp-for="MilitaryNo" class="form-control" readonly value="@ViewBag.MilitaryNo">
